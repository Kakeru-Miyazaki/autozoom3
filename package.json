{
  "name": "autozoom3",
  "version": "1.0.0",
  "description": "autozoom3",
  "main": "main.js",
  "scripts": {
    "test": "electron .",
    "build-mac": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64",
    "build-linux": "electron-builder --linux --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kakeru-Miyazaki/autozoom3.git"
  },
  "author": {
    "name": "kakekakemiya",
    "email": "kake9205@gamil.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kakeru-Miyazaki/autozoom3/issues",
    "email": "kake9205@gamil.com"
  },
  "homepage": "https://github.com/Kakeru-Miyazaki/autozoom3#readme",
  "devDependencies": {
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1"
  },
  "build":{
    "appId": "autozoom3.app",
    "files": [
      "package.json",
      "package-lock.json",
      "add.css",
      "add.html",
      "add.js",
      "common.css",
      "join.js",
      "main.js",
      "menu.css",
      "menu.html",
      "nomeeting.html"
    ],
    "mac":{
      "target": "dmg",
      "icon":"icon.icns"
    },
    "win":{
      "target": "nsis",
      "icon":"icon.png"
    },
    "linux":{
      "target":"deb",
      "icon":"icon.icns"
    },
    "nsis":{
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
